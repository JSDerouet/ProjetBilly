				<a class="btn btn-secondary rounded disabled">Ajout de l'objet</a>
			</div>
		</div>
		<div class="d-flex flex-column">
			<h3>Notes d'aventure</h3>
			<textarea class="form-control my-3">{{ game.notes }}</textarea>
			<a class="btn btn-secondary rounded disabled">Ajout d'une note</a>
		</div>
	</div>
	<div class="d-flex justify-content-center p-5 m-5">
		<button class="btn-primary" href={{ path('app_game_index') }}>Enregistrer la partie</button>
	</div>
	{{ form_end(form) }}
</form>{% endblock %}
