{% extends 'base.html.twig' %}

{% block title %}Fiche perso de {{ game.name }}
{% endblock %}

{% block javascripts %}{% endblock %}
{% block body %}
	<h1 class="d-flex justify-content-center">Fiche Personnage</h1>
	<h2>Livre 1</h2>
	<form action="" method="post">
		{{ form_start(form) }}
		<h2 class="d-flex justify-content-start col-lg-10 mt-5 ms-5">
			{{ form_row(form.name, {'attr':{'class':'form-control border-dark'}})}}</div>
	</h2>
	<div class="d-flex flex-column align-items-center justify-content-center mb-5">
		<h2 class="mb-4">Caractère du billy :</h2>
		<div>{{ form_row(form.caracteres, {'attr':{'class':'form-control border-dark'}})}}</div>
	</div>
	<div class="d-md-flex justify-content-around mt-3">
		<div class="d-flex flex-column col-md-3">
			<h3>Habileté</h3>
			<div>Base :
				{{ game.habileteBase }}</div>
			<div class="d-flex align-items-center w-50">Caractère:
				<a class="btn btn-primary rounded p-1 ms-2" onclick="this.nextElementSibling.value=parseInt(this.nextElementSibling.value)-1">-</a>
				{{ form_widget(form.habileteCarac, {'attr':{'class':'form-control border-dark'}})}}
				<a class="btn btn-primary rounded p-1" onclick="this.previousElementSibling.value=parseInt(this.previousElementSibling.value)+1">+</a>
			</div>
			<div class="d-flex align-items-center w-50">Matériel:
				<a class="btn btn-primary rounded p-1 ms-2" onclick="this.nextElementSibling.value=parseInt(this.nextElementSibling.value)-1">-</a>
				{{ form_widget(form.habileteItem, {'attr':{'class':'form-control border-dark'}})}}
				<a class="btn btn-primary rounded p-1" onclick="this.previousElementSibling.value=parseInt(this.previousElementSibling.value)+1">+</a>
			</div>
			<div class="d-flex align-items-center w-50">Gain:
				<a class="btn btn-primary rounded p-1 ms-2" onclick="this.nextElementSibling.value=parseInt(this.nextElementSibling.value)-1">-</a>
				{{ form_widget(form.habileteGain, {'attr':{'class':'form-control border-dark'}})}}
